@model IEnumerable<aspapp.Models.VM.Logs>

@{
    ViewData["Title"] = "Application Logs";
}

<div class="container mt-4">
    <h2>Application Logs</h2>
    <hr />

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Użytkownik</th>
                <th>Data</th>
                <th>Akcja</th>
                <th>Wiadomość</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Brak logów do wyświetlenia.</td>
                </tr>
            }
            else
            {
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.Role</td>
                        <td>@log.TimeStamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@log.Action</td>
                        <td>@log.Message</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
