@model List<string>

<h2>Dostępne pliki </h2>

@if (Model.Count == 0)
{
    <p>Brak plików </p>
}
else
{
    <ul>
        @foreach (var file in Model)
        {
            <li>
                <a href="@Url.Action("DownloadFile", "Admin", new { fileName = file })">
                    @file
                </a>
            </li>
        }
    </ul>
}


<div>
    <form asp-action="ChangeTypeOfLicence" method="post">
        @Html.AntiForgeryToken()

        <button type="submit" class="btn btn-warning">Zmień licencje</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Powrót</a>
    </form>
</div>

<div>
    <p>Tekst: @ViewBag.Input</p>
    <p>Klucz: @ViewBag.Key</p>

    <p><strong>Szyfr:</strong> @ViewBag.Encrypted</p>
    <p><strong>Deszyfr:</strong> @ViewBag.Decrypted</p>
</div>