@{
    ViewData["Title"] = "Usuń konto użytkownika";
}

<div class="container mt-4">
    <h2>Usuń konto użytkownika</h2>
    <hr />

    <form asp-action="DeleteAccount" method="post">
        @Html.AntiForgeryToken()



        <button type="submit" class="btn btn-danger">Usuń użytkownika</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Powrót</a>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.Message</div>
        }
    </form>
</div>
