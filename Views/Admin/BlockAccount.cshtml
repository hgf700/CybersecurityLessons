@model aspapp.Models.VM.BlockAccount
@{
    ViewData["Title"] = "Zablokuj konto użytkownika";
}

<div class="container mt-4">
    <h2>Zablokuj konto użytkownika</h2>
    <hr />

    <form asp-action="BlockAccount" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Email" class="form-label">E-mail użytkownika</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Days" class="form-label">Na ile dni zablokować?</label>
            <input asp-for="Days" type="number" class="form-control" />
            <span asp-validation-for="Days" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger">Zablokuj</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Powrót</a>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.Message</div>
        }
    </form>
</div>
