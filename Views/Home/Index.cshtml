@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager
@inject IHttpContextAccessor HttpContextAccessor
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Home page";
    var user = HttpContextAccessor.HttpContext?.User;
}

<div class="text-center">
    <h1 class="display-4">@Localizer["Welcome"]</h1>


    @if (user.IsInRole("User"))
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Traveler" asp-action="Edit">zmien haslo uzytkownika</a>
        </li>
    }
    else if (user.IsInRole("ADMIN"))
    {
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">@Localizer["Admin"]</a>
        <a href="@Url.Action("Index", "Traveler")" class="btn btn-secondary">@Localizer["Traveler"]</a>
    }
    else{
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">@Localizer["Login"]</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">@Localizer["Register"]</a>
        </li>
    }
</div>
