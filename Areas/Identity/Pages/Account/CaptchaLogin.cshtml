@page
@model aspapp.Areas.Identity.Pages.Account.CaptchaLogin

@{
    ViewData["Title"] = "Captcha Login";
}

<h1 class="text-light">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>

        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label text-black">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label text-black">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <p>Wpisz kod captcha w odwrotnej kolejnosci</p>

                <div class="mb-3">
                    <img src="/Captcha/Generate" alt="Captcha" />
                    <input type="text" name="CaptchaInput" class="form-control mt-2" placeholder="Wpisz kod captcha w odwrotnej kolejnosci" required />
                </div>

                <button type="submit" class="btn btn-primary">Log in</button>
            </form>
        </section>
    </div>

    <div class="col-md-6 col-md-offset-2">
        <section>
            <p>Admin: Asd@asdasd2.com</p>
            <p>User: ASDasd1@gmail.com</p>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
